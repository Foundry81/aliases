############################
# Swarm & Cluster State   #
############################

alias dsinfo='docker info | sed -n "/Swarm:/,/Plugins:/p"'
# ğŸŸ¢ Swarm status, node count, and manager state

alias dsnodes='docker node ls'
# ğŸŸ¢ List Swarm nodes

alias dsnodei='docker node inspect'
# ğŸŸ¢ Inspect a Swarm node


############################
# Node Workload Visibility#
############################

alias dsnodeps='docker node ps'
# ğŸŸ¢ Show tasks running on a node


############################
# Service Visibility      #
############################

alias dssvc='docker service ls'
# ğŸŸ¢ List Swarm services and replica counts

alias dssvcps='docker service ps'
# ğŸŸ¢ Show service tasks and placement

alias dssvci='docker service inspect'
# ğŸŸ¢ Inspect service configuration

alias dssvclogs='docker service logs -f'
# ğŸŸ¢ Follow logs across all replicas


############################
# Task-Level Debugging    #
############################

alias dstasks='docker service ps --no-trunc'
# ğŸŸ¢ Full task history with placement and failure reasons

alias dstaski='docker inspect'
# ğŸŸ¢ Inspect an individual task container


############################
# Swarm Networking        #
############################

alias dsnetls='docker network ls'
# ğŸŸ¢ List Swarm and overlay networks

alias dsneti='docker network inspect'
# ğŸŸ¢ Inspect overlay networks


############################
# Placement & Scheduling  #
############################

alias dslabels='docker node inspect -f "{{.Description.Hostname}}: {{.Spec.Labels}}"'
# ğŸŸ¢ View node labels

alias dsavail='docker node inspect -f "{{.Description.Hostname}}: {{.Spec.Availability}}"'
# ğŸŸ¢ Show node scheduling availability


############################
# Rollouts & Lifecycle    #
############################

alias dssvcupd='docker service inspect -f "{{.Spec.UpdateConfig}}"'
# ğŸŸ¢ View rolling update configuration

alias dssvcrm='docker service rm'
# ğŸ”´ Remove a service from the Swarm

alias dsdrain='docker node update --availability drain'
# ğŸ”´ Drain a node

alias dsactivate='docker node update --availability active'
# ğŸŸ¡ Reactivate a drained node

alias dsnoderm='docker node rm'
# ğŸ”´ Remove a node from the Swarm (must be drained)
